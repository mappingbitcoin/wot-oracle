# WoT Oracle Configuration

# Comma-separated list of Nostr relay URLs
RELAYS=wss://relay.mappingbitcoin.com,wss://relay.damus.io,wss://nos.lol,wss://relay.nostr.band

# HTTP server port
HTTP_PORT=8080

# SQLite database path
DB_PATH=wot.db

# Enable DVM (Data Vending Machine) interface
DVM_ENABLED=false

# DVM private key (hex or nsec format, required if DVM_ENABLED=true)
# DVM_PRIVATE_KEY=

# Rate limiting: requests per minute per IP
RATE_LIMIT_PER_MINUTE=100

# Maximum hops for distance queries (1-10)
MAX_HOPS=3

# LRU cache size (number of query results to cache)
CACHE_SIZE=10000

# Cache TTL in seconds (how long cached results are valid)
CACHE_TTL_SECS=300

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info
